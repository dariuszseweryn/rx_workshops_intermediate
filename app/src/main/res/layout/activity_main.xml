<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.polidea.rxworkshopintermediate.MainActivity" tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="192dp"
                                          android:orientation="vertical"/>
    <TextView
            android:id="@+id/timerLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECONDS REMAINING"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline" android:layout_marginRight="8dp" android:textAlignment="viewEnd"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/timerTv" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"/>
    <TextView
            android:text="SCORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scoreLabelTv"
            app:layout_constraintRight_toLeftOf="@+id/guideline" android:layout_marginRight="8dp" android:textAlignment="viewEnd"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/timerLabelTv"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scoreTv"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/timerLabelTv" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"/>

</android.support.constraint.ConstraintLayout>
